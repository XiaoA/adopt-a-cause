<%= render 'shared/content_title', title: "Create a New Project" %>

<div class="container">
	<div class="form-horizontal">
		<form class="form-group">
			<%= form_for @project do |f| %>
				<div class="form-group">
					<div class="col-md-4 col-md-offset-2 control-label">			
						<%= f.label :project_name %>
						<%= f.text_field :project_name %>
					</div>
				</div>
	</div>
	<div class="form-horizontal">
		<div class="form-group">
			<div class="col-md-4 col-md-offset-2 control-label">
				<%= f.label :project_description %>
				<%= f.text_field :project_description %>
			</div>
		</div>
	</div>
	<div class="form-horizontal">
		<div class="form-group">
			<div class="col-md-4 col-md-offset-2 control-label">
				<%= f.label :project_contact_person %>
				<%= f.text_field :project_contact_person %>
			</div>
		</div>
	</div>
	<div class="form-horizontal">
		<div class="form-group">
			<div class="col-md-4 col-md-offset-2 control-label">
				<%= f.label :begin_date %>
				<%= f.text_field :begin_date %>
			</div>
		</div>
	</div>
	<div class="form-horizontal">
		<div class="form-group">
			<div class="col-md-4 col-md-offset-2 control-label">
				<%= f.label :end_date %>
				<%= f.text_field :end_date %>
			</div>
		</div>
	</div>

	<div class="form-horizontal">
		<div class="form-group">
			<div class="col-md-5 control-label">
				<%= f.submit class: "btn btn-primary" %>
			</div>
		</div>
	</div>
	<% end %>
	</form>
</div>


