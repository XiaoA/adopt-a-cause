<div class="col-sm-4 col-sm-offset-3">
  <h2>Log in</h2>
</div>
<div class="col-sm-4 col-sm-offset-3">
  <div class="form-group">
    <%= form_tag 'login' do %>
    <%= label_tag :username %>
    <%= text_field_tag :username %>
  </div>
</div>
<div class="col-sm-4 col-sm-offset-3">
  <div class="form-group">
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </div>
</div>
<div class="col-sm-4 col-sm-offset-3">
  <div class="form-group">
    <%= submit_tag 'Login', class: "btn btn-primary"%>
  </div>
</div>
<% end %>
