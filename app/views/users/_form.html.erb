<%= form_for @user do |f| %>
  <div class="container">
    <div class="form-horizontal">
      <div class="form-group">
	<div class="col-md-4 col-md-offset-2 control-label">
	  <%= f.label :username %>
	  <%= f.text_field :username %>
	</div>
      </div>
    </div>
    <div class="form-horizontal">
      <div class="form-group"> 
	<div class="col-md-4 col-md-offset-2 control-label">
	  <%= f.label :password %>
	  <%= f.password_field :password %>
	</div>
      </div>
    </div>
    <div class="form-horizontal">
      <div class="form-group"> 
	<div class="col-md-4 col-md-offset-2 control-label">
	  <%= f.label :email %>
	  <%= f.text_field :email %>
	</div>
      </div>
    </div>
    <div class="form-horizontal">
      <div class="form-group"> 
	<div class="col-md-4 col-md-offset-2 control-label">
	  <%= f.label :phone_number %>
	  (Optional) <%= f.text_field :phone_number %>
	</div>
      </div>
    </div>
    <div class="form-horizontal">
      <div class="form-group"> 
	<div class="col-md-2 col-md-offset-3 control-label">
	  <%= f.submit class: "btn btn-primary" %>
	</div>
      </div>
    </div>
  </div>
</div>
<% end %>



