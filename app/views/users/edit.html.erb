<h2>Edit Profile</h2>

<%= form_for @user do |f| %>
  <%= f.label :username %>
  <%= f.text_field :username %>
  <br>
  <%= f.label :password %>
  <%= f.password_field :password %>
  <br>
  <%= f.label :email %>
  <%= f.text_field :email %>
  <br>
  <%= f.label :phone_number %>
  <%= f.text_field :phone_number %> (Optional)
  <br>
  <%= f.submit ('Register') %>
<% end %>
